<?xml version="1.0" encoding="utf-8" ?>
<rxui:ReactiveContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
			 xmlns:rxui="clr-namespace:ReactiveUI.XamForms;assembly=ReactiveUI.XamForms"
			 xmlns:vms="clr-namespace:StitchCalc.ViewModels"
			 x:TypeArguments="vms:MaterialsViewModel"
             x:Class="StitchCalc.Views.MaterialsView"
						 Icon="cloth.png"
						 Title="Materials">
	
	<ContentPage.ToolbarItems>
		<ToolbarItem x:Name="AddMaterialToolbarItem" Text="Add">
			<ToolbarItem.Icon>
				<OnPlatform x:TypeArguments="FileImageSource" Android="add.png" WinPhone="add.png"/>
			</ToolbarItem.Icon>
		</ToolbarItem>
	</ContentPage.ToolbarItems>
	
	<StackLayout>
		<SearchBar x:Name="MaterialsSearchBar"/>
		
		<ListView x:Name="MaterialsListView">
			<ListView.ItemTemplate>
				<DataTemplate>
					<TextCell Text="{Binding Name}" Detail="{Binding Price, StringFormat='{}{0:N2} per meter'}">
						<TextCell.ContextActions>
							<!--<MenuItem Text="Delete" IsDestructive="True" Command="{Binding Delete}"/>-->
						</TextCell.ContextActions>
					</TextCell>
				</DataTemplate>
			</ListView.ItemTemplate>
		</ListView>
	</StackLayout>
</rxui:ReactiveContentPage>
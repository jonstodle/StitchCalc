<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="StitchCalc.Views.HomeView"
						 Icon="home.png"
						 Title="Products">

	<ContentPage.ToolbarItems>
		<ToolbarItem x:Name="AddProductToolbarItem" Text="Add"/>
	</ContentPage.ToolbarItems>
	
	<StackLayout Spacing="10">
		<SearchBar x:Name="ProductSearchBar"/>

		<ListView x:Name="ProductListView">
			<ListView.ItemTemplate>
				<DataTemplate>
					<TextCell Text="{Binding Name}" Detail="{Binding TotalPrice, StringFormat='Price {0:N2}'}">
						<TextCell.ContextActions>
							<MenuItem Text="Delete" IsDestructive="True" Command="{Binding Delete}"/>
						</TextCell.ContextActions>
					</TextCell>
				</DataTemplate>
			</ListView.ItemTemplate>
		</ListView>
	</StackLayout>
</ContentPage>
<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="StitchCalc.Views.ProductWorkUnitsView"
						 Title="Work">
	<ContentPage.ToolbarItems>
		<ToolbarItem x:Name="AddWorkUnitToolbarItem" Text="Add"/>
	</ContentPage.ToolbarItems>
	
	<StackLayout>
		<ListView x:Name="WorkUnitsListView">
			<ListView.ItemTemplate>
				<DataTemplate>
					<ViewCell>
						<StackLayout Orientation="Horizontal">
							<Label Text="{Binding Name}" HorizontalOptions="StartAndExpand"/>

							<Label Text="{Binding TotalCharge}"/>
						</StackLayout>
					</ViewCell>
				</DataTemplate>
			</ListView.ItemTemplate>
		</ListView>

		<StackLayout Orientation="Horizontal">
			<Label Text="Sum" HorizontalOptions="StartAndExpand"/>

			<Label x:Name="SumLabel"/>
		</StackLayout>
	</StackLayout>
</ContentPage>
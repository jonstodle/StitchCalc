<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="StitchCalc.Views.ProductWorkUnitsView"
						 Icon="clock.png"
						 Title="Work">
	<ContentPage.ToolbarItems>
		<ToolbarItem x:Name="AddWorkUnitToolbarItem" Text="Add" Icon="add.png"/>
	</ContentPage.ToolbarItems>
	
	<StackLayout>
		<ListView x:Name="WorkUnitsListView">
			<ListView.ItemTemplate>
				<DataTemplate>
					<TextCell Text="{Binding Name}" Detail="{Binding TotalCharge, StringFormat='{}{0:N2}'}">
						<TextCell.ContextActions>
							<MenuItem Text="Delete" IsDestructive="True" Command="{Binding Delete}"/>
						</TextCell.ContextActions>
					</TextCell>
				</DataTemplate>
			</ListView.ItemTemplate>
		</ListView>

		<StackLayout Orientation="Horizontal">
			<StackLayout.Resources>
				<ResourceDictionary>
					<Style TargetType="Label">
						<Setter Property="FontSize" Value="Medium"/>
					</Style>
				</ResourceDictionary>
			</StackLayout.Resources>
			
			<Label Text="Sum" HorizontalOptions="StartAndExpand"/>

			<Label x:Name="SumLabel"/>
		</StackLayout>
	</StackLayout>
</ContentPage>
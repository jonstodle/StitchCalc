<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="StitchCalc.Views.ProductMaterialFormView">
	<ContentPage.ToolbarItems>
		<ToolbarItem x:Name="SaveToolbarItem" Text="Save"/>
	</ContentPage.ToolbarItems>

	<StackLayout>
		<StackLayout Orientation="Horizontal">
			<Picker x:Name="MaterialPicker" HorizontalOptions="FillAndExpand"/>

			<Button x:Name="AddMaterialButton" Text="+"/>
		</StackLayout>

		<Entry x:Name="AmountEntry" Placeholder="Amount"/>
	</StackLayout>
</ContentPage>
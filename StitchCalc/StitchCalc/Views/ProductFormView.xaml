<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="StitchCalc.Views.ProductFormView">
	<ContentPage.ToolbarItems>
		<ToolbarItem x:Name="SaveProductToolbarItem" Text="Save">
			<ToolbarItem.Icon>
				<OnPlatform x:TypeArguments="FileImageSource" Android="save.png" WinPhone="save.png"/>
			</ToolbarItem.Icon>
		</ToolbarItem>
	</ContentPage.ToolbarItems>
	
	<StackLayout Spacing="0" Padding="10">
		<Label Text="Name"/>
		<Entry x:Name="NameEntry" Keyboard="Text"/>
	</StackLayout>
</ContentPage>